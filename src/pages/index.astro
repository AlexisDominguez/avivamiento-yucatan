---
import Layout from '../layouts/Layout.astro';
import { Button } from '../components/Button';
import { Testimonials } from '../components/Testimonials';
import { Carousel } from '../components/Carousel';
import { About } from '../modules/main/About';
---

<Layout title="Avivamiento Yucatán">
  <h1
    class="col-span-6 font-semibold text-[53px] tracking-[-3px] leading-[55px] mt-6"
  >
    Llegaste en el momento indicado. <br />
    Estás en casa
  </h1>
  <h2 class="col-span-6 mt-4">
    Lorem ipsum dolor sit amet consectetur. Ut varius nunc ornare eget. Lacus
    nec et lectus.
  </h2>
  <section class="col-span-6 mt-6 -mx-8">
    <h2 class="text-2xl font-medium mb-6 px-8">Servicios</h2>
    <Carousel client:load />
  </section>
  <section class="col-span-6 bg-purple-background -mx-8 px-8 pb-8 pt-3 mt-3">
    <About client:load />
  </section>
  <section class="col-span-6 mb-10">
    <h2 class="text-2xl font-medium mt-20 mb-8">Testimonios</h2>
    <div class="mb-14">
      <span class="text-[53px] leading-[51px] tracking-tight">
        En el día que temo yo <span class="text-purple-text">en ti</span> confío.
      </span>
      <span class="font-medium">Salmo 56:3</span>
    </div>
    <Testimonials client:only="react" />
    <Button classes="mt-8" fullWidth
      ><span class="font-medium text-base">Dar mi testimonio</span></Button
    >
  </section>
  <section class="col-span-6 mb-10">
    <h2 class="text-2xl font-medium mb-4">Acompáñanos</h2>
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3725.2218197880734!2d-89.60917818443693!3d20.983743593301227!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f5671540bce7375%3A0x11e045a55626e644!2sAvivamiento%20Yucat%C3%A1n!5e0!3m2!1ses-419!2smx!4v1722706924068!5m2!1ses-419!2smx"
      width="100%"
      height="240"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
    <p class="text-xl mt-4 font-medium mb-4">Dirección</p>
    <p>Calle 33 #450B X 36 A y 36</p>
    <p>Jesús Carranza | Mérida Yucatán</p>
    <a href="https://maps.app.goo.gl/jXBVHYgLBJSteY7T6">
      <Button classes="font-medium mt-6 mb-8" fullWidth>
        Ver en google maps
      </Button>
    </a>
  </section>
</Layout>
